<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="position"
                type="java.lang.Integer" />

        <variable
                name="tweetVM"
                type="com.assignment.zalora.twitsplit.viewmodel.TweetVM" />
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tweet_height">

            <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintVertical_bias="0.35"
                    app:layout_constraintHorizontal_bias="0.2"
                    android:text="@{tweetVM.getTweetAt(position).msg}"
                    android:id="@+id/tweet_tv"/>


            <TextView
                    app:layout_constraintTop_toBottomOf="@id/tweet_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0.2"
                    android:text="@{tweetVM.getTweetAt(position).creationDate}"
                    android:id="@+id/date_posted_tv"/>
        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</layout>